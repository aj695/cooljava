class Store{

    String storeName;
    String storeProducts;
    double storePrice;

    public Store(String name, String products, double price) {
        storeName = name;
        storeProducts = products;
        storePrice = price;
    }

    public String advertising() {
        String message = "Buy our stuff...";
        return message;
    }

    public static void main(String[] args) {
        Store gucciStore = new Store("Gucci", "Flip flops", 100.99);
        String message = gucciStore.advertising();
        System.out.println(message + "Cool");
    }
}
